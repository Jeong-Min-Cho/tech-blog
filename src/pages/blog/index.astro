---
import BaseLayout from '@layouts/BaseLayout.astro';
import PostCard from '@components/PostCard.astro';
import SearchBar from '@components/SearchBar.astro';
import LanguageFilter from '@components/LanguageFilter.astro';
import { getCollection } from 'astro:content';

const allPosts = await getCollection('blog', ({ data }) => !data.draft);
const sortedPosts = allPosts.sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf());
---

<BaseLayout
  title="Posts"
  description="All blog posts about web development and programming."
>
  <section class="mx-auto max-w-3xl px-4 py-12">
    <h1 class="text-2xl font-bold text-skin-base mb-2">Posts</h1>
    <p id="posts-count" class="text-skin-muted mb-6">
      {sortedPosts.length} article{sortedPosts.length !== 1 ? 's' : ''} about software development
    </p>

    <LanguageFilter />

    <SearchBar />

    <div id="posts-list" class="divide-y divide-skin-line border-t border-b border-skin-line">
      {sortedPosts.map((post) => (
        <PostCard
          title={post.data.title}
          description={post.data.description}
          pubDate={post.data.pubDate}
          slug={post.slug}
          tags={post.data.tags}
          body={post.body || ''}
          lang={post.data.lang}
        />
      ))}
    </div>

    <p id="no-posts-message" class="text-skin-muted text-center py-12 hidden">
      No posts found for the selected language.
    </p>
  </section>
</BaseLayout>
