---
import BaseLayout from '@layouts/BaseLayout.astro';
import PostCard from '@components/PostCard.astro';
import SearchBar from '@components/SearchBar.astro';
import { getCollection } from 'astro:content';

const posts = await getCollection('blog', ({ data }) => !data.draft);
const sortedPosts = posts.sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf());
---

<BaseLayout
  title="Posts"
  description="All blog posts about web development and programming."
>
  <section class="mx-auto max-w-3xl px-4 py-12">
    <h1 class="text-2xl font-bold text-skin-base mb-2">Posts</h1>
    <p class="text-skin-muted mb-8">
      {sortedPosts.length} articles about web development
    </p>

    <div class="mb-8">
      <SearchBar />
    </div>

    <div class="divide-y divide-skin-line border-t border-b border-skin-line">
      {sortedPosts.map((post) => (
        <PostCard
          title={post.data.title}
          description={post.data.description}
          pubDate={post.data.pubDate}
          slug={post.slug}
          tags={post.data.tags}
          body={post.body}
        />
      ))}
    </div>
  </section>
</BaseLayout>
